<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/ui_black</item>
        <item name="android:colorForeground">@color/ui_white</item>
        <item name="android:textColorPrimary">@color/ui_white</item>
        <item name="android:textColorPrimaryInverse">@color/ui_gray</item>
        <item name="colorAccent">@color/int_pink</item>
        <item name="android:dialogTheme">@style/Dialog</item>
        <item name="android:alertDialogTheme">@style/Dialog</item>
    </style>
    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/int_pink</item>
        <item name="android:background">@color/ui_black</item>
        <item name="android:textColorPrimary">@color/ui_white</item>
        <item name="android:textColorPrimaryInverse">@color/ui_gray</item>
    </style>

</resources>
