<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/ui_black"
        android:contentDescription="@string/denarius"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="-7dp"
        android:paddingBottom="5dp"
        app:srcCompat="@drawable/ic_d" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/imageView"
        android:background="@color/ui_black"
        android:gravity="left|center_vertical"
        android:paddingTop="3dp"
        android:text="@string/app_name"
        android:textColor="@color/ui_white"
        android:textSize="26sp"
        app:fontFamily="@font/museo" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imageView"
        android:background="@color/int_white" />

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_alignBottom="@id/screen"
        android:layout_marginRight="-10dp"
        android:layout_toLeftOf="@id/screen"
        app:srcCompat="@drawable/bg_tab" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_alignRight="@id/root"
        android:background="@color/ui_white"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:text="Main"
        android:textColor="@color/ui_black"
        android:textSize="16sp"
        app:fontFamily="@font/museo" />

</RelativeLayout>